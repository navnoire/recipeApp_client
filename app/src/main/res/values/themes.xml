<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeApp_client" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>


    </style>

    <style name="TextDefault">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLabelDefault">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextInputDefault">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
        <item name="android:colorAccent">@color/green</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/pink</item>
    </style>
</resources>