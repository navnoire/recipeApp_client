<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item

        android:bottom="-3px"
        android:left="3px"
        android:right="-5px"
        android:top="-5px">
        <shape>

            <gradient
                android:angle="0"
                android:startColor="#00000000"
                android:centerColor="#83050505"
                android:endColor="#00000000"/>

            <stroke
                android:width="2dp"
                android:color="#fff"
                android:dashWidth="8dp"
                android:dashGap="4dp"/>
        </shape>
    </item>
</layer-list>